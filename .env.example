# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
LLM_MODEL=gemma:2b
EMBEDDING_MODEL=nomic-embed-text

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chromadb
CHROMA_COLLECTION_NAME=laravel_docs

# Laravel Documentation
LARAVEL_DOCS_REPO=https://github.com/laravel/docs.git
LARAVEL_VERSION=12
DOCS_CACHE_DIR=./sources

# RAG Configuration
TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RESPONSE_TIMEOUT=30

# Indexing Configuration
PARALLEL_INDEXING=True
MAX_WORKERS=8
BATCH_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/laravel-rag.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
